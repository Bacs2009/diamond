          order['order_phone'] = $("#order_phone").val();
          order['order_comment'] = $("#order_comment").val();
          //order['order_info_w'] = $("#hidden_info_w").val();
          //order['order_info_m'] = $("#hidden_info_m").val();
          lang = '{{Yii.params.language}}';
          error = false;
