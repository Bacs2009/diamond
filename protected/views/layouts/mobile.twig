          }
          if(order['order_city'] == '{{ lang.t("site", "Город") }}' || order['order_city'] == ''){
            $("#order_city").addClass('b-error');
            error = true;
          }
          if(order['order_email'] == '{{ lang.t("site", "Эл. почта") }}' || reg.test(order['order_email']) == false || order['order_email'] == ''){
