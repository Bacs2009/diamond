{% extends this.layout %}

{% block breadcrumbs %}
	{% widget('zii.widgets.CBreadcrumbs', {'links' : {'Акции' : ['index'], 0 : 'редактирование'}}) %}
{% endblock %}

{% block bigColumn %}

	<h1>Редактирование акции: "{{ model.title_ru }}"</h1>

	{{ this.renderPartial('_form', {'model' : model}) }}

{% endblock %}

{% block sidebar %}
	{% set menu = [
			{'label' : 'К списку акций', 'url' : ['index']},
			{'label' : 'Добавить новую', 'url' : ['create']},
			{'label' : 'Редактировать текущую', 'url' : {0 : 'update', 'id' : model.id}},
			{'label' : 'Удалить текщую', 'url' : 'javascript:void(0);', 'linkOptions' : {'submit' : {0 : 'delete', 'id' : model.id}, 'confirm' : 'Вы уверены, удалить эту акцию?'}}
	] %}
	{% beginWidget('zii.widgets.CPortlet', {'title' : 'Действия'}) %}
		{% widget('zii.widgets.CMenu', {'items' : menu, 'htmlOptions' : {'class' : 'operations'}}) %}
	{% endWidget %}
{% endblock %}